{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@customer/*": ["customer/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
